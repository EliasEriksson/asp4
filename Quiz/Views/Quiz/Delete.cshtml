@model Quiz

@{
    ViewData["Title"] = "Delete";
}

<div class="content-heading">
    <h1>Delete</h1>
    <nav><a asp-action="Index">Quiz list</a></nav>
</div>
<hr/>
<div class="content">
    <div class="text">
        <p>You are about to delete: <em class="bold">@Html.DisplayFor(model => model.Name)</em></p>
        <p>Are you sure you want to delete it?</p>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <div class="submit-group">
            <button>Delete</button>
        </div>
    </form>
</div>
